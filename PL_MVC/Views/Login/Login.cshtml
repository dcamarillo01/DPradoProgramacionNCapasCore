@{
}



<container class="container shadow-lg">
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <h1>Login</h1>
                </div>

                <div class="row shadow-lg rounded-3">
                    <div class="col " style="padding-top:20px" >
                        @using(Html.BeginForm("Login","Login")){

                            <div class="row">
                                <div class="col">
                                    @Html.LabelFor(model => model.Email, new {@class="form-label"} )
                                    @Html.TextBoxFor(model => model.Email, new {@class="form-control"})
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    @Html.LabelFor(model => model.Passsword, new {@class="form-label"} )
                                    @Html.PasswordFor(model => model.Passsword, new {@class="form-control"})
                                </div>
                            </div>

                            <div class="row">
                                <div class="col" style="text-align:center; padding-top:20px; padding-bottom:20px">
                                    <input type="submit" value="Iniciar Sesion" class="btn btn-success" />

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</container>
