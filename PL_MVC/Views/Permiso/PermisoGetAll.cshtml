@model ML.Permiso
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<container class="container">
    <div class="row">
        <div class="col">

            <div class="row ">
                <div class="col">

                    <table class="table table-sm shadow-lg">
                        <thead class="table-dark">
                            <tr>
                                <th>IdPermiso</th>
                                <th>IdEmpleado</th>
                                <th>FechaSolicitud</th>
                                <th>FechaInicio</th>
                                <th>FechaFin</th>
                                <th>HoraInicio</th>
                                <th>HoraFin</th>
                                <th>Motivo</th>
                                <th>Aprobar</th>
                                <th>Rechazar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ML.Permiso permiso in Model.Permisos)
                            {
                                <tr>
                                    <td>@permiso.IdPermiso</td>
                                    <td>@permiso.Empleado.IdEmpleado</td>
                                    <td>@permiso.FechaSolicitud</td>
                                    <td>@permiso.FechaInicio</td>
                                    <td>@permiso.FechaFin</td>
                                    <td>@permiso.HoraInicio</td>
                                    <td>@permiso.HoraFin</td>
                                    <td>@permiso.Motivo</td>
                                    <td>
                                        <btn class="btn ">Aprobar</btn>
                                    </td>
                                    <td>
                                        <btn class="btn">Rechazar</btn>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</container>

